# Test environment configuration for wallet authentication

# Authentication testing options
NODE_ENV=test
BYPASS_WALLET_SIGNATURE=true
SKIP_REFRESH_TOKEN_STORAGE=true
BYPASS_TOKEN_ERRORS=true

# API configuration
API_URL=http://localhost:3001
JWT_SECRET=test-secret-key-for-development-only
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Database - use test database to avoid affecting production data
DATABASE_URL=postgres://postgres:postgres@localhost:5432/shahi_test

# Domain configuration
DOMAIN_NAME=app.shahi.io
DEFAULT_CHAIN_ID=1

# Log level
LOG_LEVEL=debug
