{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/buildcache"
  },
  "exclude": [
    "node_modules",
    "test",
    "**/*spec.ts",
    "**/*.spec.ts",
    "dist",
    "debug-ts.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
