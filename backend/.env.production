# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=Aliveadmin
DB_PASSWORD=production_password
DB_DATABASE=Alive-Db
DB_LOGGING=false
DB_SSL=true

# JWT Configuration
JWT_SECRET=your-strong-production-jwt-secret-key
JWT_REFRESH_SECRET=your-strong-production-refresh-token-secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=30d
JWT_EXPIRATION=1h

# Other Configuration
NODE_ENV=production
BLOCKCHAIN_RPC_URL=wss://mainnet.infura.io/ws/v3/YOUR_PRODUCTION_INFURA_KEY

# CORS Configuration
ALLOWED_ORIGINS=https://alivehuman.com,https://app.alivehuman.com

# Email Service
SMTP_HOST=smtp.your-production-smtp-provider.com
SMTP_PORT=587
SMTP_USER=no-reply@alivehuman.com
SMTP_PASSWORD=your-secure-smtp-password
EMAIL_FROM=AliveHuman <no-reply@alivehuman.com>

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_WALLET_AUTH=true
ENABLE_REFERRAL_SYSTEM=true

# API Configuration
PORT=3000
API_PREFIX=api/v1

# Blockchain RPC URLs
ETH_RPC_URL=wss://mainnet.infura.io/ws/v3/your-production-key
BNB_RPC_URL=https://bnb-mainnet.g.alchemy.com/v2/your-production-key
SOL_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/your-production-key
MATIC_RPC_URL=wss://polygon-mainnet.infura.io/ws/v3/your-production-key

# Database
DATABASE_URL=postgres://Aliveadmin:production_password@localhost:5432/Alive-Db

# Blockchain
ADMIN_WALLET_PRIVATE_KEY=your-secure-private-key
SHAHI_CONTRACT_ADDRESS=your-contract-address

# WebSocket
WS_PORT=3001
WS_HOST=localhost

# Security
RATE_LIMIT_TTL=3600
RATE_LIMIT_MAX=5

# Note: SKIP_DEVICE_CHECK is intentionally not included in production
