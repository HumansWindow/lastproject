{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      {
        "include": "**/*.json",
        "exclude": "**/tsconfig.*.json",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
